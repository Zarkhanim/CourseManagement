@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Groups>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h4><a class="btn btn-success" href="/Group/CreateGroup">Create Group</a></h4><br /><br />
    <h5 class="btn-danger">@ViewBag.checkResultMessage</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Begin date</th>
                <th>End date</th>
                <th>Course</th>
                <th>Teacher</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model)
            {
            <tr>
                @if (@item.Status == 1)
                {
                    <td>@item.Name</td>
                    <td>@item.BeginDate.ToShortDateString()</td>
                    <td>@item.Course.Name</td>
                    <td>@item.Teacher.FirstName</td>
                    <td>Active</td>
                    <td><a  href="/Group/GetGroup/@item.ID">Edit</a><a  href="/Group/DeleteGroup/@item.ID">Delete</a><a href="/Group/DeactiveGroup/@item.ID">Deactive</a></td>
                }
                else if (@item.Status == 2)
                {
                    <td>@item.Name</td>
                    <td>@item.BeginDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td>@item.Course.Name</td>
                    <td>@item.Teacher.FirstName</td>
                    <td>Deleted group</td>
                }
                else
                {
                    <td>@item.Name</td>
                    <td>@item.BeginDate.ToShortDateString()</td>
                    <td>@item.EndDate.ToShortDateString()</td>
                    <td>@item.Course.Name</td>
                    <td>@item.Teacher.FirstName</td>
                    <td>Deactive</td>
                    <td><a href="/Group/DeactiveeGroup/@item.ID">Enable</a></td>
                }

            </tr>
            }
        </tbody>
    </table>
</body>
</html>
